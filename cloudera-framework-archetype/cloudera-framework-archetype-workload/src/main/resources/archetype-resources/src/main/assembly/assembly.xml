<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>src/main/assembly/root</directory>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/*.gitignore</exclude>
            </excludes>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>src/main/assembly/root</directory>
            <includes>
                <include>**/*.sh</include>
                <include>**/*.py</include>
            </includes>
            <fileMode>0700</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>src/main/resources</directory>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/*.py</exclude>
            </excludes>
            <fileMode>0700</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.sh</include>
                <include>**/*.py</include>
            </includes>
            <fileMode>0700</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <outputDirectory>lib/parcel</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>*parcel*</include>
            </includes>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib/jar</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <scope>compile</scope>
            <includes>
                <include>${groupId}:${artifactId}</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib/jar/dep</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <scope>runtime</scope>
            <excludes>
                <exclude>${groupId}:${artifactId}</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>com.cloudera.framework:cloudera-framework-assembly:tar.gz:assembly</include>
            </includes>
            <fileMode>0700</fileMode>
            <directoryMode>0755</directoryMode>
            <unpackOptions>
                <includes>
                    <include>**/*.sh</include>
                    <include>**/*.py</include>
                    <include>**/*.ddl</include>
                    <include>**/*.json</include>
                </includes>
                <excludes>
                    <exclude>meta/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>