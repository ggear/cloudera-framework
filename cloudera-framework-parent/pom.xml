                            <resources>
                                <resource>
                                    <directory>src/main/template/scala</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <filters>
                                <filter>${project.build.directory}/templater-assembly/scala/script.properties</filter>
                            </filters>
                            <skip>${templater-scala.build.skip}</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>templater-script-python</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>src/main/script/python</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/template/python</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <filters>
                                <filter>${project.build.directory}/templater-assembly/python/script.properties</filter>
                            </filters>
                            <skip>${templater-python.build.skip}</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>templater-library-scala</id>
                        <phase>generate-sources</phase>
                        <goals>
