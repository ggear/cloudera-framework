                                <resourceBundle>com.cloudera.framework:cloudera-framework-assembly:${cloudera-framework.version}</resourceBundle>
                            </resourceBundles>
                            <attached>false</attached>
                            <outputDirectory>${project.build.directory}/assembly-conf</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
